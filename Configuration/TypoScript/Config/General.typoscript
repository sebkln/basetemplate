//
// General configuration
// ------------------------------------------
config {
    headerComment = {$plugin.tx_basetemplate.headerComment}
    headerComment.if.isTrue = {$plugin.tx_basetemplate.headerComment}

    forceAbsoluteUrls = 1
    linkVars = L(0-1)

    // Deactivate all HTML comments from TYPO3, e.g.:
    // <!--  CONTENT ELEMENT, uid:37/text [begin] -->
    disablePrefixComment = 1
}
